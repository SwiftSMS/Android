<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textAppearance">@style/TextAppearance</item>
        <item name="android:textAppearanceInverse">@style/TextAppearance.Inverse</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Small</item>
        <item name="android:textAppearanceSmallInverse">@style/TextAppearance.Small.Inverse</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Medium</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.Medium.Inverse</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Large</item>
        <item name="android:textAppearanceLargeInverse">@style/TextAppearance.Large.Inverse</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    
    <style name="TextAppearance.Inverse" parent="android:TextAppearance.Inverse">
        <item name="android:textSize">@dimen/text_size_normal</item>
	</style>
    
    <style name="TextAppearance.Small" parent="android:TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearance.Small.Inverse" parent="android:TextAppearance.Small.Inverse">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextAppearance.Medium" parent="android:TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Medium.Inverse" parent="android:TextAppearance.Medium.Inverse">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextAppearance.Large" parent="android:TextAppearance.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.Large.Inverse" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="TextAppearance.DialogWindowTitle" parent="android:TextAppearance.DialogWindowTitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    
    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
