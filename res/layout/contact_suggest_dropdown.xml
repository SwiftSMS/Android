<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/text_contact_suggestion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/element_margin"
        android:paddingLeft="@dimen/element_margin"
        android:paddingRight="@dimen/element_margin"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_contact_suggestion_number"
        android:layout_width="wrap_content"
        android:text="Medium Text"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/element_margin"
        android:paddingLeft="@dimen/element_margin"
        android:paddingRight="@dimen/element_margin"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_contact_suggestion_name" />

    <TextView
        android:id="@+id/text_contact_suggestion_label"
        android:layout_width="wrap_content"
        android:text="Label"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/element_margin"
        android:paddingLeft="@dimen/element_margin"
        android:paddingRight="@dimen/element_margin"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_contact_suggestion_name" />
    
</RelativeLayout>