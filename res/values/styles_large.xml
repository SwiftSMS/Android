        <item name="android:textAppearanceInverse">@style/TextAppearance.Big.Inverse</item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.Big.Small</item>
        <item name="android:textAppearanceSmallInverse">@style/TextAppearance.Big.Small.Inverse</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.Big.Medium</item>
        <item name="android:textAppearanceMediumInverse">@style/TextAppearance.Big.Medium.Inverse</item>
        <item name="android:textAppearanceLarge">@style/TextAppearance.Big.Large</item>
        <item name="android:textAppearanceLargeInverse">@style/TextAppearance.Big.Large.Inverse</item>
        <item name="android:windowTitleStyle">@style/TextAppearance.Big.DialogWindowTitle</item>
	</style>

